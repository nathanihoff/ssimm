@article{catron_2016,
  title = {Made in {{America}}? {{Immigrant Occupational Mobility}} in the {{First Half}} of the {{Twentieth Century}}},
  shorttitle = {Made in {{America}}?},
  author = {Catron, Peter},
  year = {2016},
  month = sep,
  journal = {American Journal of Sociology},
  volume = {122},
  number = {2},
  pages = {325--378},
  publisher = {{The University of Chicago Press}},
  issn = {0002-9602},
  doi = {10.1086/688043},
  abstract = {Assimilation research largely assumes that Southern, Central, and Eastern European immigrants achieved assimilation due to job ladders within manufacturing firms in the first half of the 20th century. But this literature has never tested whether Italians and Slavs experienced upward mobility. Did manufacturing allow for the upward advancement of all European-origin groups? Using data sets containing employment histories from 1900 to 1950 in three manufacturing companies\textemdash A. M. Byers Company, Pullman-Standard Manufacturing, and the Ford Motor Company\textemdash this article offers the first empirical analysis of occupational mobility within factories among European-origin groups. Results suggest that organizational structures within firms through the formation of internal labor markets did little to counter other forces that kept immigrants from achieving upward mobility. Southern, Central, and Eastern European immigrants ended their careers within firms where they began\textemdash positions at the bottom of the occupational hierarchy\textemdash contrary to the implicit assumptions of assimilation research.}
}

@article{catron_2019,
